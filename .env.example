# Shopify App Configuration (REQUERIDO)
SHOPIFY_API_KEY=your-api-key-here
SHOPIFY_API_SECRET=your-api-secret-here
SHOPIFY_APP_URL=https://your-app.vercel.app
SCOPES=write_products,read_orders,read_customers,write_customers

# Database (REQUERIDO)
DATABASE_URL=postgresql://user:password@host:port/database

# Encryption (REQUERIDO - 32 caracteres exactos)
ENCRYPTION_KEY=your-32-character-encryption-key

# Email Configuration (OPCIONAL)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=Your App <noreply@yourapp.com>

# Environment (REQUERIDO)
NODE_ENV=production
